extends layout

block content
    .w3-card-4
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label("id") Id
                input.w3-input.w3-round(type="text" name="id" readonly value=composer.id)
                label("nome") Nome
                input.w3-input.w3-round(type="text" name="nome" value=composer.nome)
                label("bio") Biografia
                input.w3-input.w3-round(type="text" name="bio" value=composer.bio)
                label("dataNasc") Data de Nascimento
                input.w3-input.w3-round(type="date" name="dataNasc" value=composer.dataNasc)
                label("dataObito") Data de Obito
                input.w3-input.w3-round(type="date" name="dataObito" value=composer.dataObito)
                label("periodo") Periodo
                input.w3-input.w3-round(type="text" name="periodo" value=composer.periodo)
                br
                button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{date} - [
            a(href="/compositores?_sort=nome") Voltar
            span ]
