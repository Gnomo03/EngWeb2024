extends layout

block content
            .w3-card-4
                header.w3-container.w3-purple
                    h2 Period Form
            
                form.w3-container(method="POST")
                    fieldset
                        legend Metadata
                        label Id
                        input.w3-input.w3-round(type="text" name="id" value=nid readonly)
                        label Nome
                        input.w3-input.w3-round(type="text" name="nome" required)
                        label Numero de Compositores
                        input.w3-input.w3-round(type="text" name="numeroCompositores" required)

                    br
                    button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

                footer.w3-container.w3-purple
                    h5
                        a(href='/periodos') Voltar