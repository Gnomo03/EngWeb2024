extends layout

block content
    .w3-card-4
                header.w3-container.w3-teal
                    h1
                        span Periods List
                        a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
        
                .w3-container
                    table.w3-table-all
                        tr
                            th Id
                            th Name
                            th Composers
                            th Actions
                        each periods in lp
                            tr
                                td= periods.id
                                td
                                    a(href="/periodos/" + periods.id)= periods.nome 
                                td= periods.numeroCompositores
                                td 
                                    span [ 
                                    a(href="/periodos/edit/" + periods.id) Edit
                                    span ]
                                    span [
                                    a(href="/periodos/delete/" + periods.id) Delete
                                    span ]
                    footer.w3-container.w3-blue
                    h5 Generated by RPCW2024 in #{date}