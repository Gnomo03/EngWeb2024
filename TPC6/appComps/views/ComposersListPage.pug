extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1
                span Composers List
                a.w3-btn.w3-round.w3-grey(href="/compositores/registo") +
        
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                    th Period
                    th Actions
                each composer in lComp
                    tr
                        td= composer.id
                        td
                            a(href="/compositores/" + composer.id)= composer.nome 
                        td= composer.periodo
                        td 
                            span [ 
                                a(href="/compositores/edit/" + composer.id) Edit
                            span ]
                            span [
                                a(href="/compositores/delete/" + composer.id) Delete
                            span ]
        footer.w3-container.w3-blue
            h5 Generated by RPCW2024 in #{date}
