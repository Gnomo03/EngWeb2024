extends layout

block content
    .w3-card-4
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label("id") Id
                input.w3-input.w3-round(type="text" name="id" readonly value=periods.id)
                label("nome") Nome
                input.w3-input.w3-round(type="text" name="nome" value=periods.nome)
                label("bio") Numero de Compositores
                input.w3-input.w3-round(type="text" name="numeroCompositores" value=periods.numeroCompositores)
                br
                button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{date} - [
            a(href="/periodos") Voltar
            span ]
